<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      Create your account
    </h2>
    <p class="mt-2 text-center text-sm text-gray-600">
      Or
      <%= link_to "sign in to your account", new_session_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :name, class: "block text-sm font-medium text-gray-700" do %>
            Name <span class="text-red-500">*</span>
          <% end %>
          <div class="mt-1">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", required: true,
                class: "appearance-none block w-full px-3 py-2 border #{resource.errors[:name].any? ? 'border-red-300' : 'border-gray-300'} rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            <%= field_error(resource, :name) %>
          </div>
        </div>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" do %>
            Email <span class="text-red-500">*</span>
          <% end %>
          <div class="mt-1">
            <%= f.email_field :email, autocomplete: "email", required: true,
                class: "appearance-none block w-full px-3 py-2 border #{resource.errors[:email].any? ? 'border-red-300' : 'border-gray-300'} rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            <%= field_error(resource, :email) %>
          </div>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" do %>
            Password <span class="text-red-500">*</span>
          <% end %>
          <div class="mt-1">
            <%= f.password_field :password, autocomplete: "new-password", required: true,
                class: "appearance-none block w-full px-3 py-2 border #{resource.errors[:password].any? ? 'border-red-300' : 'border-gray-300'} rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            <%= field_error(resource, :password) %>
            <% if @minimum_password_length %>
              <p class="mt-1 text-sm text-gray-500">
                <%= @minimum_password_length %> characters minimum
              </p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" do %>
            Confirm Password <span class="text-red-500">*</span>
          <% end %>
          <div class="mt-1">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true,
                class: "appearance-none block w-full px-3 py-2 border #{resource.errors[:password_confirmation].any? ? 'border-red-300' : 'border-gray-300'} rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            <%= field_error(resource, :password_confirmation) %>
          </div>
        </div>

        <div>
          <%= f.submit "Sign up", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
